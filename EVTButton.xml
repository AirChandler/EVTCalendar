<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Frame name="EVTButtonFrame" parent="Minimap" enableMouse="true" hidden="false" frameStrata="LOW">
		<Size>
			<AbsDimension x="48" y="48"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="Minimap" relativePoint="RIGHT">
				<Offset>
					<AbsDimension x="-5" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>
			<Button name="EVTButton">
				<Size>
					<AbsDimension x="48" y="48"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\AddOns\EVTCalendar\Images\EVTButtonUp"/>
				<PushedTexture file="Interface\AddOns\EVTCalendar\Images\EVTButtonDown"/>
				<HighlightTexture alphaMode="ADD" file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight"/>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="EVTButtonDay" inherits="GameFontBlack" text="1" justifyH="CENTER">
							<Size>
								<AbsDimension x="20" y="20"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER" relativeTo="EVTButton">
									<Offset>
										<AbsDimension x="0" y="-3"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						this:RegisterForDrag("RightButton");
						this.dragme = false;
						this.dragenabled = false;
					</OnLoad>
					<OnDragStart> 
						this.dragme = true;
					</OnDragStart> 
					<OnDragStop>
						this.dragme = false;
					</OnDragStop>
					<OnUpdate>
						if((this.dragme == true) and (this.dragenabled == true)) then
							EVTButton_BeingDragged();
						end
					</OnUpdate>
					<OnClick>
						EVTButton_OnClick();
					</OnClick>
					<OnEnter>
						EVTButton_OnEnter();
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				EVTButton_Init();
			</OnLoad>
			<OnEvent>
				EVTButton_UpdatePosition();
			</OnEvent>
		</Scripts>
	</Frame>
</Ui>
